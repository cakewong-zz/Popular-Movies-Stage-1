<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/overview"
        android:ellipsize="end"
        android:maxLines="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/overview_tv"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/overview"
        android:contentDescription="@string/play_arrow_description"
        android:foregroundGravity="center"
        android:src="@drawable/ic_play_arrow_black_36dp" />

    <TextView
        android:id="@+id/trailer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/overview"
        android:layout_marginLeft="@dimen/trailer_margin_left"
        android:layout_marginStart="@dimen/trailer_margin_left"
        android:layout_toEndOf="@id/play_arrow"
        android:layout_toRightOf="@id/play_arrow"
        android:gravity="center"
        android:text="@string/trailer_tv" />

    <TextView
        android:id="@+id/reviews_user"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trailer"
        android:text="@string/review_user_tv" />

    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/reviews_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviews_user"
        android:text="@string/reviews_comment_tv" />

</RelativeLayout>